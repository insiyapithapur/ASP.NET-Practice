@model EmployeeMgt.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Are you sure you want to delete this employee?</h2>

<div>
    <strong>First Name:</strong> @Model.FirstName <br />
    <strong>Last Name:</strong> @Model.LastName <br />
    <strong>Designation:</strong> @Model.Designation <br />
    <strong>Department:</strong> @Model.DepartmentName <br />
    <strong>Job Title:</strong> @Model.JobTitle <br />
    <strong>Address:</strong> @Model.Address <br />
    <strong>Contact No:</strong> @Model.ContactNo <br />
    <strong>Email:</strong> @Model.Email <br />
    <strong>Photo:</strong> @Model.Photo
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
